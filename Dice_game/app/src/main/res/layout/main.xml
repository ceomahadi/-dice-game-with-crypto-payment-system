<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/background" 
>


	<RelativeLayout
		android:id="@+id/fr"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		
		<ImageView
			android:layout_alignParentRight="true"
			
			android:layout_marginTop="15dp"
			android:layout_marginBottom="15dp"
			android:layout_marginRight="15dp"
			
			android:layout_alignParentTop="true"
			android:id="@+id/ref" 
			android:layout_width="30dp" 
			android:layout_height="30dp" 
			android:layout_marginStart="15dp" 
			android:src="@drawable/gr"/>
		
		
		<ImageView
			
			android:layout_marginTop="15dp"
			android:layout_marginBottom="15dp"
			android:layout_marginRight="15dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:id="@+id/wallet" 
			android:layout_width="40dp" 
			android:layout_height="40dp" 
			android:layout_marginStart="15dp" 
			android:src="@drawable/w"/>
		
		
		<ImageView
			android:layout_toLeftOf="@+id/ref"
			android:layout_alignParentTop="true"
			android:layout_marginTop="20dp"
			android:layout_marginBottom="15dp"
			android:layout_marginRight="15dp"
			
			
			android:id="@+id/qn" 
			android:layout_width="25dp" 
			android:layout_height="25dp" 
			android:layout_marginStart="15dp" 
			android:src="@drawable/i"/>
		
		
		</RelativeLayout>

	

<RelativeLayout
	android:layout_marginTop="10dp"
		android:layout_above="@+id/r2"
		android:layout_centerInParent="true"
		android:layout_centerHorizontal="true"
android:gravity="center"
		android:id="@+id/r1"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="130dp">

		<ImageView 
			android:layout_marginEnd="7dp"
			android:id="@+id/dice_two"
			android:layout_width="80dp"
			android:layout_height="80dp"

			android:src="@drawable/ic_dice__1_" />
		<ImageView 

			android:layout_marginStart="7dp"
			android:layout_toRightOf="@+id/dice_two"

			android:id="@+id/dice_one" 
			android:layout_width="80dp" 
			android:layout_height="80dp"


			android:src="@drawable/ic_dice__6_"/>

	</RelativeLayout>










	<RelativeLayout
		android:layout_above="@+id/number_picked"
		android:layout_centerVertical="true"
		android:layout_marginTop="20dp"

		android:id="@+id/r2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		
		
		

	</RelativeLayout>


	
	
		
		
		<Button 
			
			android:backgroundTint="@color/white" 
			
	android:layout_margin="10dp"
			android:layout_below="@+id/r2"
			android:layout_toLeftOf="@+id/number_picked"
			
			android:textSize="15sp"
			android:id="@+id/under_button" 
			android:gravity="center"
			android:layout_width="wrap_content" 
			android:layout_height="30dp"
			android:textStyle="bold" 
			android:background="@drawable/button_shape" 

			android:text="under" 
			android:textColor="#000000" />
		
		
		<TextView 
			
			
			android:layout_marginTop="10dp"
			android:layout_centerInParent="true"

			android:layout_centerHorizontal="true"
			
			
			
			android:id="@+id/number_picked" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 

			android:text="7" 
			android:textColor="#ffffff" 
			android:textSize="18sp" 
			
		/>
		
		
		
		<Button 
			
			android:backgroundTint="@color/white" 
		
			android:layout_toRightOf="@+id/number_picked"
			android:layout_below="@+id/r2"

			android:layout_margin="10dp"
			android:textSize="15sp"
			android:id="@+id/over_button_" 
			android:gravity="center"
			android:layout_width="wrap_content" 
			android:layout_height="30dp"
			android:textStyle="bold" 
			android:background="@drawable/button_shape" 

			android:text="Over" 
			android:textColor="#000000" />
		
		
	
	
	<Button
		android:backgroundTint="@color/white" 
		android:layout_below="@+id/under_button"
		android:layout_toLeftOf="@+id/number_picked"
		android:layout_margin="10dp"
		android:textSize="15sp"
		android:id="@+id/trd_button" 
		android:layout_width="wrap_content" 
		android:layout_height="30dp"
		android:textStyle="bold" 

		android:background="@drawable/button_shape" 
		android:text="@string/btn" 
		android:textColor="#000000" />






	
	<Button
		android:backgroundTint="@color/white" 
		android:layout_toRightOf="@+id/number_picked"
android:layout_below="@+id/over_button_"
		android:layout_margin="10dp"
		android:textSize="15sp"
		android:id="@+id/frth_button" 
		android:layout_width="wrap_content" 
		android:layout_height="30dp"
		android:textStyle="bold" 
		android:background="@drawable/button_shape" 
		android:text="@string/btn2" 
		android:textColor="#000000" />
	
	<Button
		android:backgroundTint="@color/white" 
		android:visibility="gone"
		android:textAllCaps="false"
		android:layout_toLeftOf="@+id/number_picked"
		android:layout_below="@+id/frth_button"
		android:layout_margin="10dp"
		android:textSize="15sp"
		android:id="@+id/bounas_button" 
		android:layout_width="wrap_content" 
		android:layout_height="30dp"
		android:textStyle="bold" 

		android:background="@drawable/button_shape" 
		android:text="d1=5 ,20x" 
		android:textColor="#000000" />
	
	
	<Button
		android:backgroundTint="@color/white" 
		android:visibility="gone"
android:textAllCaps="false"
		android:layout_toRightOf="@+id/number_picked"
		android:layout_below="@+id/frth_button"
		android:layout_margin="10dp"
		android:textSize="15sp"
		android:id="@+id/bounas_button2" 
		android:layout_width="wrap_content" 
		android:layout_height="30dp"
		android:textStyle="bold" 

		android:background="@drawable/button_shape" 
		android:text="d1=d2 ,10x" 
		android:textColor="#000000" />
	
	
	<LinearLayout
		
		
		android:layout_centerInParent="true"
		android:layout_above="@+id/r1"
		android:layout_centerHorizontal="true"
		android:id="@+id/plin"
		android:orientation="horizontal"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		
		>
		
		<TextView 
			
			android:id="@+id/balanceText" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 

			android:text="P:" 
			android:textColor="#ffffff" 
			android:textSize="20sp" />
			
		<TextView 

			android:id="@+id/point_textView" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 

			android:text="3566" 
			android:textColor="#ffffff" 
			android:textSize="20sp" />
			
		
	</LinearLayout>>
	
	
	
</RelativeLayout>
