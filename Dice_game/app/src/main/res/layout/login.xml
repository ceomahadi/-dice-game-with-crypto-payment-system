<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:background="@color/background" 
	>
	
	
	
	<Button 
		android:layout_centerInParent="true"
		
		android:layout_below="@+id/google_signin_button"
		android:id="@+id/coinbase_button" 
		android:layout_width="wrap_content" 
		android:layout_height="30dp" 
		android:layout_marginTop="32dp"
		android:background="@drawable/coinbase_button_shape_stroke" 
		
		android:paddingLeft="25dp" 
		android:paddingRight="25dp" 
		android:text="Create coinbase account" 
		android:textAllCaps="true" 
		android:textColor="@color/white" 
		android:textSize="12sp" 
		android:textStyle="bold" 
		
		
		/>

	<Button

		android:layout_centerInParent="true"
		android:id="@+id/google_signin_button" 
		android:layout_width="wrap_content"
		android:layout_height="60dp" 
		android:backgroundTint="@color/white" 
		android:drawableLeft="@drawable/ic_google_svgrepo_com"
		android:drawablePadding="20dp" 

		android:paddingLeft="15dp"
		android:paddingRight="20dp" 
		android:text="Sign in with Google"
		android:textAllCaps="false" 
		android:textColor="@color/google_btn_textColor" 
		android:textSize="18sp" 


	/>
	
	
	<TextView 
		android:layout_centerInParent="true"
		android:paddingLeft="15dp" 
		android:paddingRight="30dp" 
		
		android:layout_above="@+id/textView15"
		
		android:id="@+id/textView14" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_marginBottom="10dp" 
		
		android:text="We only pay to coinbase"
		android:textAllCaps="true"
		android:textColor="@color/white"
		android:textSize="17sp" 
		android:textStyle="bold"
		
		/>
	
	<TextView 
		android:layout_centerInParent="true"
		android:layout_above="@+id/privicy_textView"
		android:id="@+id/textView15"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_marginBottom="32dp" 
		android:gravity="center"
		android:text="Remember to this coinbase account we \n will send what you earn" 
		android:textColor="@color/white" 
		android:textSize="15sp" 
		android:textStyle="bold" 
		
		/>
	
	<TextView 
		android:layout_centerInParent="true"
		android:layout_above="@+id/privicy_textView"
		android:id="@+id/textView16" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:gravity="center" 
		android:text="@string/title"
		android:textColor="@color/privicy_textColor" 
		android:textSize="13sp" 
		android:textStyle="bold" 
		
		/>
	
		
		
	
	<TextView
		android:layout_centerInParent="true"
		android:layout_above="@+id/google_signin_button"
		android:id="@+id/privicy_textView"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginBottom="24dp"
		android:text="@string/messageWithLink"
		android:textColor="@color/privicy_textColor"
		android:textSize="13sp"
		android:textStyle="bold" 
		
		
		/>
</RelativeLayout>
