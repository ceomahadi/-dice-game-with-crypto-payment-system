<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent" 
	android:background="@color/background" 
	>
	<Button
		
		android:background="#DCDCDC"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:textSize="15sp"
		android:textColor="#000000"
		android:id="@+id/share_button"
		android:layout_width="180dp"
		android:layout_height="35dp"
		android:layout_marginBottom="16dp" 
		
		
		android:textStyle="bold"
		android:text="Share" 
		
		
		/>
	<TextView 
		android:layout_centerHorizontal="true"
		android:layout_above="@+id/share_button"
		android:id="@+id/refer_code_textView" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:text="BAHMU3" 
		android:textColor="@color/white" 
		android:textSize="22sp" 
		android:textStyle="bold"
		
		
		/>
	<TextView 
		android:layout_above="@+id/refer_code_textView"
		android:gravity="center" 
		android:id="@+id/textView10" 
		android:layout_width="340dp"
		android:layout_height="wrap_content" 
		android:layout_marginBottom="10dp" 
		
		android:text="Get 10% of your friend's profits,Share your code:"
		android:textColor="@color/white" 
		android:textSize="14sp" 
		
		
		/>
	
		
		
	<ImageView 
		android:layout_alignParentStart="true"
		android:background="@drawable/arrows"
		android:id="@+id/arrow_refer" 
		android:layout_width="37dp" 
		android:layout_height="37dp"
		android:layout_marginStart="24dp"
		android:layout_marginTop="15dp" 
		android:visibility="visible" 
		
		/>
	<Button 
		android:background="#DCDCDC"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/edittext_referCode"
		android:layout_marginTop="10dp"
		android:textColor="#000000" 
		android:visibility="visible" 
		android:id="@+id/referCode_verifyButton" 
		android:layout_width="80dp"
		android:layout_height="33dp"
		
		
		android:text="Enter" 
		
		/>
	<EditText 
		
		android:layout_centerInParent="true"
		android:visibility="visible" 
		android:id="@+id/edittext_referCode" 
		android:layout_width="200dp" 
		android:layout_height="40dp" 
		android:layout_marginTop="5dp"
		android:background="@drawable/refer_edittext_shape_stroke" 
		android:ems="10" 
		android:paddingHorizontal="5dp"
		android:gravity="center"
		android:hint="Enter Code" 
		android:inputType="textAutoComplete" 
		
		android:textColorHint="#9E9D8A"
		
		/>
	
	
		
		
	
	<TextView 
		android:layout_centerInParent="true"
		
		android:visibility="gone"
		android:id="@+id/alredy_enter_texView" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		
		android:gravity="center" 
		android:text="You have already entered your friend's \n code" 
		android:textColor="@color/white" 
		android:textSize="15sp" 
	
		/>
</RelativeLayout>
